<?xml version="1.0" encoding="UTF-8" ?><widget xmlns = "http://www.w3.org/ns/widgets"  xmlns:gap   = "http://phonegap.com/ns/1.0"  id          = "com.phonegap.promise-tracker"  versionCode = ""  version     = "1.0.0">  <name>Promise Tracker</name>  <description>Promise Tracker mobile application</description>  <author href="http://americanpromise.org/" email="info@americanpromise.org">American Promise</author>  <!-- Platform Build Selection -->  <gap:platform name="ios" />  <gap:platform name="android" />  <!-- Preferences -->  <feature name="http://api.phonegap.com/1.0/device" />  <!-- Multi-Platform -->  <preference name="phonegap-version" value="3.1.0" />  <preference name="orientation" value="default" />  <preference name="prerendered-icon" value="true" />  <preference name="fullscreen" value="false" />  <preference name="webviewbounce" value="false" />  <preference name="show-splash-screen-spinner" value="true" />  <preference name="permissions" value="none" />  <preference name="target-device" value="universal" />  <preference name="stay-in-webview" value="false" />  <preference name="ios-statusbarstyle" value="black-opaque" />  <preference name="detect-data-types" value="true" />  <preference name="exit-on-suspend" value="false" />  <preference name="auto-hide-splash-screen" value="true" />  <preference name="disable-cursor" value="false" />  <preference name="android-minSdkVersion" value="7" />  <preference name="android-installLocation" value="auto" />  <!-- Other Useful Elements -->  <!-- Icon Support -->  <icon src="images/icons/icon.png" />  <!-- iOS -->  <icon src="images/icons/icon.png" gap:platform="ios" width="57" height="57" />  <icon src="images/icons/icon-72.png" gap:platform="ios" width="72" height="72" />  <icon src="images/icons/icon_at_2x.png" gap:platform="ios" width="114" height="114" />  <!-- retina iPad support: PhoneGap 2.5.0+ only -->  <icon src="images/icons/icon-72_at_2x.png" gap:platform="ios" width="144" height="144" />  <!-- Android -->  <icon src="images/icons/icon.png" gap:platform="android" gap:density="ldpi" />  <icon src="images/icons/icon-72.png" gap:platform="android" gap:density="mdpi" />  <icon src="images/icons/icon_at_2x.png" gap:platform="android" gap:density="hdpi" />  <icon src="images/icons/icon-72_at_2x.png" gap:platform="android" gap:density="xhdpi" />  <!-- Splash Screens -->  <gap:splash src="images/splash/splash.png" />  <!-- iOS -->  <gap:splash src="images/splash/splash.png" gap:platform="ios" width="320" height="480" />  <gap:splash src="images/splash/splash_at_2x.png" gap:platform="ios" width="640" height="960" />  <gap:splash src="images/splash/splash_iphone5.png" gap:platform="ios" width="640" height="1136" />  <gap:splash src="images/splash/splash_Landscape.png" gap:platform="ios" width="1024" height="748" />  <gap:splash src="images/splash/splash_Portrait.png" gap:platform="ios" width="768" height="1004" />  <!-- retina iPad support: PhoneGap 2.5.0+ only -->  <!-- <gap:splash src="images/splash/splash_Landscape_at_2x.png" gap:platform="ios" width="2048" height="1496" /> -->  <!-- <gap:splash src="images/splash/splash_Portrait_at_2x.png" gap:platform="ios" width="1536" height="2008" /> -->  <!-- Android -->  <gap:splash src="images/splash/splash.png" gap:platform="android" gap:density="ldpi" />  <gap:splash src="images/splash/splash_at_2x.png" gap:platform="android" gap:density="mdpi" />  <gap:splash src="images/splash/splash_Portrait.png" gap:platform="android" gap:density="hdpi" />  <!-- <gap:splash src="images/splash/splash_Portrait_at_2x.png" gap:platform="android" gap:density="xhdpi" /> -->  <!-- Usage -->  <!-- If you do not want any permissions to be added to your app, add the  following tag to your config.xml; you will still have the INTERNET  permission on your app, which PhoneGap requires. -->  <preference name="permissions" value="none"/>  <!-- Access Element -->  <access origin="*" />  <gap:plugin name="nl.x-services.plugins.launchmyapp">    <param name="URL_SCHEME" value="promisetracker" />  </gap:plugin>  <gap:plugin name="org.apache.cordova.camera" />  <gap:plugin name="org.apache.cordova.file" />  <gap:plugin name="org.apache.cordova.file-transfer" />  <gap:plugin name="org.apache.cordova.media" />  <gap:plugin name="org.apache.cordova.media-capture" />  <gap:plugin name="org.apache.cordova.splashscreen" />  <!-- <gap:plugin name="org.apache.cordova.dialogs" /> --></widget>